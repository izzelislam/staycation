<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
  <thead>
      <tr>
          <th>No</th>
          <th>Nama bank</th>
          <th>No Rekening</th>
          <th>gambar</th>
          <th>Nama</th>
          <th>Action</th>
      </tr>
  </thead>

  <tbody>
      <% for(let i = 0; i < bank.length; i++){ %>
        <tr>
            <td><%= i + 1 %></td>
            <td><%= bank[i].nameBank %></td>
            <td><%= bank[i].nomorRekening %></td>
            <td>
                <img src="http://localhost:3000/<%= bank[i].imageUrl %>" alt="" style="width: 100px;">
            </td>
            <td><%= bank[i].name %></td>
            <td>
                <a href="javascript:void()" type="button" class="btn btn-warning btn-circle btn-sm button-update" 
                    data-id="<%= bank[i].id %>"
                    data-namebank="<%= bank[i].nameBank %>"
                    data-norek="<%= bank[i].nomorRekening %>"
                    data-name="<%= bank[i].name %>"
                >
                    <i class="fa fa-edit"></i>
                </a>

                <form action="/admin/bank/<%= bank[i].id %>?_method=DELETE" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-danger btn-circle btn-sm">
                        <i class="fa fa-trash"></i>
                    </button>
                </form>
            </td>
        </tr>
      <% } %>
  </tbody>
</table>